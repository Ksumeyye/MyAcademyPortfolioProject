@model List<MyPortfolio.Models.TblFeature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<br />
<br />
<h3>Öne Çıkanlar Sayfası</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim Url</th>
        <th>İsim Soyisim</th>
        <th>Başlık Url</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:50px;width:50px" /></td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-outline-danger ">Sil</a></td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-outline-info ">Güncelle</a></td>
        </tr>
    }

</table>

<br />
<a href="/Feature/AddFeature" class="btn btn-outline-dark">Yeni Öne Çıkan Ekle</a>



