@model List<MyPortfolio.Models.TblSocialMedias>
    @foreach (var item in Model)
    {
<div class="footer wow fadeIn" data-wow-delay="0.3s">
    <div class="container-fluid">
        <div class="container">
            <div class="footer-info">
                <h2>@item.NameSurname</h2>
               
                <div class="footer-menu">
                    
                    <p>@item.Gmail</p>
                </div>
                <div class="footer-social">

                    <a href="@item.Github"><i class="fab fa-github"></i></a>
                    <a href="@item.Linkedin"><i class="fab fa-linkedin-in"></i></a>
                    <a href="@item.Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="@item.Instagram"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
        <div class="container copyright">
            <p>@DateTime.Now.Year &copy; <a href="#">My PortFolio</a>, Tüm Hakları Saklıdır| Designed By <a href="https://htmlcodex.com">HTML Codex</a></p>
        </div>
    </div>
</div>
    }