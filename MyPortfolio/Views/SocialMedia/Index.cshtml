@model List<MyPortfolio.Models.TblSocialMedias>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<br />
<br />
<h3>Sosyal Medya Adres Sayfası</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>İsim Soyisim</th>
        <th>E-mail</th>
        <th>Linkedin</th>
        <th>Github</th>
        <th>Twitter</th>
        <th>Instagram</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.NameSurname</td>
            <td>@item.Gmail</td>
            <td><a href="@item.Linkedin" target="_blank">Linkedin Linki</a></td>
            <td><a href="@item.Github" target="_blank">Github Linki</a></td>
            <td><a href="@item.Twitter" target="_blank">Twitter Linki</a></td>
            <td><a href="@item.Instagram" target="_blank">İnstagram Linki</a></td>
            <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger ">Sil</a></td>
            <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-info ">Güncelle</a></td>
        </tr>
    }

</table>

<br />
<a href="/SocialMedia/AddSocialMedia" class="btn btn-outline-dark">Yeni Sosyal Medya Ekle</a>




